{
  "name": "easily paste in wikijs",
  "version": "1.0",
  "manifest_version": 3,
  "description": "happy writing for wikijs",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      
      "matches": [
        "file://*"
        // "http://10.0.0.1:13000/*"
      ],
      "js": ["scripts/jquery.js", "scripts/work.js"]
    }
  ],
  "permissions": ["contextMenus", "clipboardRead", "clipboardWrite", "offscreen"]
}
